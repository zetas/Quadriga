<!DOCTYPE html>
<html>
<head>
    <title>Quadriga Coin Exchange | {% block title %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Quadriga Coin Exchange">
    <meta name="author" content="QubitLogic">
    <!-- Bootstrap -->
    {% block stylesheets %}
        {% stylesheets '@bootstrap_css' filter='cssrewrite' %}
        <link rel="stylesheet" media="screen" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}

    {% block head_js %}
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        {% javascripts '@ie_js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <![endif]-->
    {% endblock %}
</head>
<body>
<div class="navbar-wrapper">
    <div class="container">

        <div class="navbar navbar-inverse navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">QuadrigaCX</a>
                </div>
                <div class="navbar-collapse collapse">
                    {{ knp_menu_render('MainSiteBundle:Builder:mainMenu', {'nav_type': 'navbar', 'template': 'MainSiteBundle:Menu:bc_knp_menu.html.twig'}) }}
                    {{ knp_menu_render('MainSiteBundle:Builder:userMenu', {'nav_type': 'navbar', 'template': 'MainSiteBundle:Menu:bc_knp_menu.html.twig'}) }}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container marketing">
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <div class="col-md-4 pull-right">
            <p>USD Balance: <a href="{{ path('fos_user_profile_show') }}">${{ app.user.fiatBalance|default(0) }}</a> | BTC Balance: <a href="{{ path('fos_user_profile_show') }}">{{ app.user.btcBalance|default(0) }}</a></p>
        </div>
        <div class="clearfix"></div>
    {% endif %}
    <div class="container">
        {% block content %}
        {% endblock %}
    </div>

<!-- FOOTER -->
<footer>
    <p class="pull-right"><a href="#">Back to top</a></p>
    <p>&copy; 2013 Company, Inc. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
</footer>

</div><!-- /.container -->


{% block footer_js %}
    {% javascripts '@jquery' '@bootstrap_js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>
