            </tr>
            <tr>
                <td>{{ form_widget(form.plainPassword.first,{'attr': {'placeholder': 'PASSWORD:', 'style': 'width:800px; height:35px;  -webkit-border-radius: 10px; -moz-border-radius: 10px; border-radius: 10px; border:1px #CCCCCC solid; padding:5px;'}}) }}</td>
