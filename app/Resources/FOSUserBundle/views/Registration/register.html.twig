{% block fos_user_content %}

<div id="maincontent">

    <div id="container">

        <h1 style="margin-left:90px;">Register to our Secured Network</h1>
        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">

        <table width="800" border="0" cellspacing="5" cellpadding="5" align="center">
            <tr>
                <td>
