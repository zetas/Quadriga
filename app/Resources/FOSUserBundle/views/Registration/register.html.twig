                </td>
            </tr>
            <tr>
                <td>{{ form_errors(form) }}</td>
            </tr>
            <tr>
                <td>{{ form_widget(form.firstName,{'attr': {'placeholder': 'FIRST NAME:', 'style': 'width:800px; height:35px;  -webkit-border-radius: 10px; -moz-border-radius: 10px; border-radius: 10px; border:1px #CCCCCC solid; padding:5px;'}}) }}</td>
            </tr>
            <tr>
                <td>{{ form_widget(form.lastName,{'attr': {'placeholder': 'LAST NAME:', 'style': 'width:800px; height:35px;  -webkit-border-radius: 10px; -moz-border-radius: 10px; border-radius: 10px; border:1px #CCCCCC solid; padding:5px;'}}) }}</td>
            </tr>
