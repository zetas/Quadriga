{% extends '::base.html.twig' %}

{% block title 'Transaction Confirm' %}

    {% block content %}
        <div class="container">
            <div class="col-md-12">
                <div class="col-md-5 col-md-offset-3 well well-sm">
                    <h2>Confirm Transaction #{{ transaction.id }}</h2>
                    {% if transaction.currency.name == 'ETF' %}
                    <p>Please enter your banking details so we can find your transaction.</p>
                    {% elseif transaction.currency.name == 'Western Union' %}
                    <p>Please enter the information you received from the Western Union location.</p>
                    {% endif %}
                    {{ form_start(form) }}
                    {{ form_row(form.name) }}
                    {% if transaction.currency.name == 'ETF' %}
                        {{ form_row(form.bank) }}
                        {{ form_row(form.account) }}
                    {% elseif transaction.currency.name == 'Western Union' %}
                        {{ form_row(form.location) }}
                        {{ form_row(form.mtcn) }}
                    {% endif %}
                    {{ form_row(form.amount) }}
                    {{ form_row(form.confirm) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    {% endblock %}