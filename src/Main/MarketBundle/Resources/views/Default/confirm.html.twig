{% extends '::base.html.twig' %}

{% block title 'Confirm Order' %}

    {% block content %}
        <div class="container">
            <div class="col-md-12">
                <div class="col-md-10 col-md-offset-2">
                    <div class="well well-sm col-md-5">
                        <h2>Confirm {{ type|capitalize }} {{ direction|capitalize }} Order</h2>
                        <p>Please review the details of your order and confirm.</p>
                        <div class="col-md-12">
                            {% if type == 'limit' %}
                                {% set price = data.price %}
                            {% else %}
                                {% set price = 0 %}
                            {% endif %}
                            <ul>
                                <li>Amount of BTC: {{ data.amount }}</li>
                                <li>Price: {{ price }}</li>
                                <li>Fee: 0.5%</li>
                                <li>Cost: </li>
                            </ul>
                            <p><a href="" class="btn btn-primary">Confirm</a></p>
                        </div>
                    </div>
                    <div class="clearfix"></div>

                </div>
                <div class="col-md-10 col-md-offset-1">
                    {{ render(controller('MainMarketBundle:Default:view', {'max': 10})) }}
                </div>
            </div>
        </div>
    {% endblock %}