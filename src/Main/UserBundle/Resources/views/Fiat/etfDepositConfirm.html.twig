{% extends '::base.html.twig' %}

{% block title 'ETF Deposit Confirm' %}

    {% block content %}
        <div class="container">
            <div class="col-md-12">
                {% include 'MainSiteBundle:Notification:flashes.html.twig' %}
                <div class="col-md-7 col-md-offset-2">
                    <div class="well well-sm">
                        <h2>ETF Deposit Confirmation</h2>
                        {% if finished == true %}
                            <p>Please send a wire transfer in the amount of ${{ amount }} to the banking details below:</p>
                            <p>Bank: {{ target.bank }}<br/>Routing #: {{ target.routing }}<br/>Account #: {{ target.account }}</p>
                            <br/>
                            <p>Once your deposit is sent please return to your profile page to update the transaction with the confirmation details. Your deposit will be posted to your account within 24 hours after receipt.</p>
                        {% else %}
                        <p>The amount has been adjusted to include the required fees. The amount you will receive is the original amount you entered.</p>
                        {{ form(form) }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}