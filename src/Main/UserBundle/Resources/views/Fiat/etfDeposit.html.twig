{% extends '::base.html.twig' %}

{% block title 'USD ETF/Wire Transfer Deposit' %}

    {% block content %}
        <div class="container">
            <div class="col-md-12">
                <div class="col-md-5 col-md-offset-2">
                    <div class="well well-sm">
                        <h2>ETF/Wire Transfer Deposit</h2>
                        {% if amount is not defined %}
                            <p>{{ form(form) }}</p>
                        {% else %}
                            <p>Please send a wire transfer in the amount of ${{ amount }} to the banking details below:</p>
                            <p>BANK<br/>ROUTING#<br/>ACCOUNT#</p>
                            <br/>
                            <p>Once your deposit is sent please return to your profile page to update the transaction with the confirmation details. Your deposit will be posted to your account within 24 hours after receipt.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}